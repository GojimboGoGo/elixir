<div class="jumbotron" id="description">
    <%= content_tag :h2, "Hollywood Hotel" %>
    <%= content_tag :p, "A forested hill scarred by a recent wildfire. A signal tower stands here, a green light blinking periodically." %>
</div>

<div>
    <ul class="events list-group">
        <h3 class="list-group-item-heading">History</h3>
